---
export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="scroll-pt-24">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.png" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body
        class="antialiased bg-body text-body text-white font-body bg-gray-800 scroll-pt-24"
    >
        <div class="relative z-10 w-full border-b border-white/40">
            <nav
                class="h-20 flex items-center container mx-auto px-4 gap-4 sm:gap-12"
            >
                <a href="/" class="text-xl font-bold">Stormgate World</a>
                <a href="/hype/1" class="font-medium">News</a>
                <div class="flex-auto"></div>
                <a
                    href="https://playstormgate.com"
                    target="_blank"
                    class="bg-white rounded-full px-6 py-2 text-black text-sm font-bold hidden sm:block"
                >
                    Sign up for beta
                </a>
            </nav>
        </div>
        <slot />
        <footer
            class="container mx-auto px-4 py-12 text-center text-white/60 text-sm"
        >
            <p>
                Stormgate World is a fan-made website not affiliated with
                Stormgate or FrostGiant Studios.
            </p>
        </footer>
    </body>
</html>
