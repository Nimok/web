---
import { formatNumber } from "../../lib/utils";
import type { InstagramContent, RedditContent } from "../../lib/content";

export interface Props {
  data: InstagramContent;
}

const { data } = Astro.props;
---

<a class="inline-flex items-center text-orange-400">
  <i class="ti ti-heart mr-1 w-4"></i>
  {formatNumber(data.metadata?.likes_count)}
</a>
<a class="inline-flex items-center truncate" href={data.author_url} target="_blank" rel="noopener ugc">
  <i class="ti ti-brand-instagram mr-1 w-4 text-[#E4405F]"></i>
  {data.author}
</a>
