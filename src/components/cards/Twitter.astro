---
import Card from "./Base.astro";
import { Icon } from "astro-icon";
import { formatNumber } from "../../lib/utils";
import type { TwitterContent } from "../../lib/content";
export interface Props {
  data: TwitterContent;
}

const { data } = Astro.props;
---

<Card data={data}>
  <a class="text-orange-400 inline-flex items-center">
    <Icon name="tabler:heart" class="w-4 mr-1" />
    {formatNumber(data.metadata?.likes_count)}
  </a>
  {
    /*<span class="inline-flex items-center">
          <Icon name="tabler:eye" class="w-4 mr-1" />
          {formatNumber(data.statistics.viewCount)}
        </span>*/
  }
  <a class="truncate inline-flex items-center">
    <img src="/content/websites/twitter.com.png" class="h-3 mr-2" />
    {data.author}
  </a>
</Card>
